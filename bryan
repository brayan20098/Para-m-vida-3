<body>
  <h1>Te amo, mi nubecita de az√∫car ‚òÅÔ∏èüíï</h1>  <script>
    // Corazones que caen
    function createFallingHeart() {
      const heart = document.createElement('div');
      heart.className = 'heart';
      heart.style.left = Math.random() * 100 + 'vw';
      heart.style.animationDuration = (Math.random() * 3 + 2) + 's';
      document.body.appendChild(heart);
      setTimeout(() => heart.remove(), 5000);
    }
    setInterval(createFallingHeart, 200);

    // Explosi√≥n de corazones al tocar/clic
    function explosion(x, y) {
      for (let i = 0; i < 20; i++) {
        const heart = document.createElement('div');
        heart.className = 'heart explosion';
        heart.style.left = x + 'px';
        heart.style.top = y + 'px';
        heart.style.width = '10px';
        heart.style.height = '10px';
        heart.style.transition = 'transform 0.6s ease-out, opacity 0.6s';
        document.body.appendChild(heart);

        setTimeout(() => {
          heart.style.transform = `translate(${(Math.random() - 0.5) * 200}px, ${(Math.random() - 0.5) * 200}px)`;
          heart.style.opacity = 0;
        }, 0);

        setTimeout(() => heart.remove(), 700);
      }
    }

    document.addEventListener('click', e => {
      explosion(e.clientX, e.clientY);
    });
    document.addEventListener('touchstart', e => {
      const touch = e.touches[0];
      explosion(touch.clientX, touch.clientY);
    });
  </script></body>
</html>